			"icon":"condition.png",
			"roles": ["conditionSource", "conditionTarget"],
			"properties": [
				{
					"id":"color",
					"type":"Color",
					"title":"Color",
					"value":"#D3DEFF",
					"refToView":"color",
					"optional":false,
					"fill":true
				}
			]
		},
		{
			"type": "node",
			"id":"inputcondition",
			"title":"Input Condition",
			"groups":[],
			"description":"A Workflow net input condition.",
			"view":"inputcondition.svg",
			"icon":"inputcondition.png",
			"roles": ["conditionSource"],
			"properties": [
				{
					"id":"color",
					"type":"Color",
					"title":"Color",
					"value":"#D3DEFF",
					"refToView":"color",
					"optional":false,
					"fill":true
				}
			]
		},
		{
			"type": "node",
			"id":"outputcondition",
			"title":"Output Condition",
			"groups":[],
			"description":"A Workflow net output condition.",
			"view":"outputcondition.svg",
			"icon":"outputcondition.png",
			"roles": ["conditionTarget"],
			"properties": [
				{
					"id":"color",
					"type":"Color",
					"title":"Color",
					"value":"#D3DEFF",
					"refToView":"color",
					"optional":false,
					"fill":true
				}
			]
		},
		{
			"type": "edge",
			"id":"controlflow",
			"title":"Control Flow",
			"description":"",
			"groups":[],
			"view":"controlflow.svg",
			"icon":"controlflow.png",
			"roles": [],
			"properties": []
		}
	],
	"rules": {
		"connectionRules": [
			{
				"role":"controlflow",
				"connects": [
					{
						"from":"activitySource",
						"to":"conditionTarget"
					},
					{
						"from":"conditionSource",
						"to":"activityTarget"
					}
				]
			}
		],
		"cardinalityRules": [
			{
				"role":"inputcondition",
				maximumOccurrence:1
			},
			{
				"role":"outputcondition",
				maximumOccurrence:1
			},
		],
		"containmentRules": [
			{
				"role":"diagram",
				"contains":[
					"activity", 
					"condition", 
					"inputcondition", 
					"outputcondition"
				]
			}
		]
	}
}
