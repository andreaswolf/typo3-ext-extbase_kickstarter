{
	"title":"Workflow Nets",
	"namespace":"http://www.example.org/workflownets#",
	"description":"Simple stencil set for Workflow Nets.",
 	"stencils" : [
 		{
			"type": "node",
			"id":"diagram",
			"title":"Diagram",
			"description":"",
			"view":"diagram.svg",
			"icon":"diagram.png",
			"mayBeRoot": true,
			"roles": [
			],
			"properties": [
				{
					"id":"title",
					"type":"String",
					"title":"Title",
					"value":""
				}
			]
		},
 		{
			"type": "node",
			"id":"activity",
			"title":"Activity",
			"groups":[],
			"description":"An atomic activity.",
			"view":"activity.svg",
			"icon":"activity.png",
			/*"serialize":function(shape, data) {
				var numOfOutgoings = shape.getOutgoingShapes().length;
				data.push({
						  name:"numOfOutgoings",
						  prefix:"oryx",
						  value:numOfOutgoings,
						  type:"literal"
						  });
				return data;
			},*/
			"serialize":{"type":"Workflownets.Activity.serialize"},
			"roles": ["activitySource", "activityTarget"],
			"properties": [
				{
					"id":"caption",
					"type":"String",
					"title":"Caption",
					"value":"",
					"description":"",
					"tooltip":"",
					"readonly":false,
					"optional":true,
					"refToView":"caption",
					"wrapLines":true
				},
				{
					"id":"trigger",
					"type":"Choice",
					"title":"Trigger",
					"value":"Automatic",
					"optional":false,
					"items": [
						{
							"title":"Automatic",
							"value":"Automatic",
							"refToView":"automatic"
						},
						{
							"title":"User",
							"value":"User",
							"refToView":"user"
						},
						{
							"title":"External",
							"value":"External",
							"refToView":"external"
						},
						{
							"title":"Time",
							"value":"Time",
							"refToView":"time"
						}
					]
				},
				{
					"id":"split",
					"type":"Choice",
					"title":"Split Behavior",
					"value":"Or",
					"optional":"false",
					"items": [
						{
							"title":"Or",
							"value":"Or",
							"refToView":"orsplit"
						},
						{
							"title":"Explicit Or",
							"value":"Explicit Or",
							"refToView":"explicitorsplit"
						},
						{
							"title":"And",
							"value":"And",
							"refToView":"andsplit"
						},
						{
							"title":"And / Or",
							"value":"And / Or",
							"refToView":"andorsplit"
						}
					]
				},
				{
					"id":"join",
					"type":"Choice",
					"title":"Join Behavior",
					"value":"Or",
					"optional":"false",
					"items": [
						{
							"id":"c1",
							"title":"Or",
							"value":"Or",
							"refToView":"orjoin"
						},
						{
							"id":"c2",
							"title":"Explicit Or",
							"value":"Explicit Or",
							"refToView":"explicitorjoin"
						},
						{
							"id":"c3",
							"title":"And",
							"value":"And",
							"refToView":"andjoin"
						}
					]
				},
				{
					"id":"color",
					"type":"Color",
					"title":"Color",
					"value":"#D3DEFF",
					"refToView":"color",
